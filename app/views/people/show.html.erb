<div class="container">

  <div class="row">
    <div class="title centered">
    <h1>Your Results</h1>
    </div>
  </div>

  <div class="row">
    <div class="centered">
      <p>age: <%= @person.age %></p>
      <p>sex: <%= @person.sex %></p>
      <p>birthday: <%= @person.birthday %></p>
      <p>current income: <%= number_to_currency(@person.current_income) %></p>
      <p>full retirement age: <%= @person.full_retirement_age %></p>
      <p>full retirement date: <%= @person.birthday >> (@person.full_retirement_age * 12) %></p>
      <p>life expectancy: <%= @person.life_expectancy %></p>
      <p>spousal benefits: <%= @person.spousal_benefits %></p>
      <p>claim date: <%= @person.claim_date %></p>
      <p>Monthly AMIE: <%= number_to_currency(@person.monthly_amie_base) %></p>
      <p>estimated maximum benefit: <%= number_to_currency(@person.maximum_benefit) %></p>
      <p>estimated adjusted benefit: <%= number_to_currency(@person.adjusted_benefit) %></p>
    </div>
  </div>

</div>

<%= link_to '<--- Back', new_person_path %>